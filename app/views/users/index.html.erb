<h1>User Permissions</h1>
<%= render '/shared/flash_messages' %>
<table class = "table table-hover">
 <thead>
	<tr>
		<th>Email</th>
		<th>Read</th>
		<th>Write</th>
		<th>Delete</th>
		<th>Change password</th>
	</tr>
	 </thead>
	  <tbody>
	<% @users.each do |user| %>
	<tr>
		<td><%=user.email%></td>
		<td><%=user.read%></td>
		<td><%=user.write%></td>
		<td><%=user.remove%></td>
		<td>
			<%= link_to 'Edit Password', edit_path(user), remote: true,	'data-toggle': 'modal','data-target': '#modal-window'%>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>

<!-- Modal -->
<div class="modal fade " id="modal-window" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"></div>

